<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <imports>
        <import resource="checkers.xml"/>
    </imports>
    <services>

        <!--Services-->

        <service id="swag_migration_assistant.service.environment_service" class="SwagMigrationAssistant\Service\EnvironmentService">
            <argument type="service" id="models" />
            <argument type="service" id="swag_migration_assistant.repository.environment_repository" />
            <argument type="service" id="swag_migration_assistant.service.plugin_information_service" />
            <argument>%shopware.release.version%</argument>
            <argument>%shopware.release.version_text%</argument>
            <argument>%shopware.release.revision%</argument>
        </service>

        <service id="swag_migration_assistant.service.plugin_information_service" class="SwagMigrationAssistant\Service\PluginInformationService">
            <argument type="service" id="shopware_plugininstaller.plugin_service_store_production" />
            <argument type="service" id="dbal_connection" />
            <argument>%shopware.release.version%</argument>
        </service>

        <service id="swag_migration_assistant.service.category_service" class="SwagMigrationAssistant\Service\CategoryService">
            <argument type="service" id="swag_migration_assistant.repository.category_repository" />
        </service>

        <service id="swag_migration_assistant.service.product_service" class="SwagMigrationAssistant\Service\ProductService">
            <argument type="service" id="swag_migration_assistant.repository.product_repository" />
            <argument type="service" id="shopware_media.media_service" />
            <argument type="service" id="models" />
        </service>

        <service id="swag_migration_assistant.service.customer_service" class="SwagMigrationAssistant\Service\CustomerService">
            <argument type="service" id="swag_migration_assistant.repository.customer_repository" />
            <argument type="service" id="models" />
        </service>

        <service id="swag_migration_assistant.service.order_service" class="SwagMigrationAssistant\Service\OrderService">
            <argument type="service" id="swag_migration_assistant.repository.order_repository" />
            <argument type="service" id="models" />
        </service>

        <!-- Todo: Implement a DocumentService for 5.4
        <service id="swag_migration_assistant.service.document_service" class="SwagMigrationAssistant\Service\DocumentService">
            <argument type="service" id="swag_migration_assistant.repository.document_repository" />
            <argument type="service" id="shopware.filesystem.private" />
            <argument type="service" id="models" />
        </service>
        -->

        <service id="swag_migration_assistant.service.translation_service" class="SwagMigrationAssistant\Service\TranslationService">
            <argument type="service" id="swag_migration_assistant.repository.translation_repository" />
        </service>

        <service id="swag_migration_assistant.service.asset_service" class="SwagMigrationAssistant\Service\AssetService">
            <argument type="service" id="swag_migration_assistant.repository.asset_repository" />
            <argument type="service" id="shopware_media.media_service" />
            <argument type="service" id="models" />
        </service>

        <service id="swag_migration_assistant.service.customer_group_service" class="SwagMigrationAssistant\Service\CustomerGroupService">
            <argument type="service" id="swag_migration_assistant.repository.customer_group_repository" />
            <argument type="service" id="swag_migration_assistant.repository.customer_repository" />
            <argument type="service" id="models" />
        </service>

        <service class="SwagMigrationAssistant\Service\AttributeService" id="swag_migration_assistant.service.attribute_service">
            <argument type="service" id="swag_migration_assistant.repository.attribute_repository" />
            <argument type="service" id="models" />
        </service>

        <!--Repositories-->

        <service id="swag_migration_assistant.repository.environment_repository" class="SwagMigrationAssistant\Repository\EnvironmentRepository">
            <argument type="service" id="dbal_connection"/>
        </service>

        <service id="SwagMigrationAssistant\Repository\AbstractRepository" abstract="true">
            <argument type="service" id="dbal_connection" />
        </service>

        <service id="swag_migration_assistant.repository.category_repository" class="SwagMigrationAssistant\Repository\CategoryRepository" parent="SwagMigrationAssistant\Repository\AbstractRepository" />

        <service id="swag_migration_assistant.repository.product_repository" class="SwagMigrationAssistant\Repository\ProductRepository" parent="SwagMigrationAssistant\Repository\AbstractRepository" />

        <service id="swag_migration_assistant.repository.customer_repository" class="SwagMigrationAssistant\Repository\CustomerRepository" parent="SwagMigrationAssistant\Repository\AbstractRepository" />

        <service id="swag_migration_assistant.repository.order_repository" class="SwagMigrationAssistant\Repository\OrderRepository" parent="SwagMigrationAssistant\Repository\AbstractRepository" />

        <service id="swag_migration_assistant.repository.document_repository" class="SwagMigrationAssistant\Repository\DocumentRepository" parent="SwagMigrationAssistant\Repository\AbstractRepository" />

        <service id="swag_migration_assistant.repository.translation_repository" class="SwagMigrationAssistant\Repository\TranslationRepository" parent="SwagMigrationAssistant\Repository\AbstractRepository" />

        <service id="swag_migration_assistant.repository.asset_repository" class="SwagMigrationAssistant\Repository\AssetRepository" parent="SwagMigrationAssistant\Repository\AbstractRepository" />

        <service id="swag_migration_assistant.repository.customer_group_repository" class="SwagMigrationAssistant\Repository\CustomerGroupRepository" parent="SwagMigrationAssistant\Repository\AbstractRepository" />

        <service id="swag_migration_assistant.repository.dynamic_repository" class="SwagMigrationAssistant\Repository\DynamicRepository">
            <argument type="service" id="dbal_connection" />
        </service>

        <service id="swag_migration_assistant.repository.attribute_repository" class="SwagMigrationAssistant\Repository\AttributeRepository">
            <argument type="service" id="dbal_connection" />
        </service>

</services>

</container>
