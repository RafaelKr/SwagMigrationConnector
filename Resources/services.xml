<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <!--Services-->

        <service id="swag_migration_api.service.environment_service" class="SwagMigrationApi\Service\EnvironmentService">
            <argument type="service" id="models" />
            <argument type="service" id="swag_migration_api.repository.environment_repository" />
            <argument>%shopware.release.version%</argument>
            <argument>%shopware.release.version_text%</argument>
            <argument>%shopware.release.revision%</argument>
        </service>

        <service id="swag_migration_api.service.category_service" class="SwagMigrationApi\Service\CategoryService">
            <argument type="service" id="swag_migration_api.repository.category_repository" />
        </service>

        <service id="swag_migration_api.service.product_service" class="SwagMigrationApi\Service\ProductService">
            <argument type="service" id="swag_migration_api.repository.product_repository" />
            <argument type="service" id="shopware_media.media_service" />
            <argument type="service" id="models" />
        </service>

        <service id="swag_migration_api.service.customer_service" class="SwagMigrationApi\Service\CustomerService">
            <argument type="service" id="swag_migration_api.repository.customer_repository" />
            <argument type="service" id="models" />
        </service>

        <service id="swag_migration_api.service.order_service" class="SwagMigrationApi\Service\OrderService">
            <argument type="service" id="swag_migration_api.repository.order_repository" />
            <argument type="service" id="models" />
        </service>

        <service id="swag_migration_api.service.translation_service" class="SwagMigrationApi\Service\TranslationService">
            <argument type="service" id="swag_migration_api.repository.translation_repository" />
        </service>

        <service id="swag_migration_api.service.asset_service" class="SwagMigrationApi\Service\AssetService">
            <argument type="service" id="swag_migration_api.repository.asset_repository" />
            <argument type="service" id="shopware_media.media_service" />
            <argument type="service" id="models" />
        </service>

        <!--Repositories-->

        <service id="swag_migration_api.repository.environment_repository" class="SwagMigrationApi\Repository\EnvironmentRepository">
            <argument type="service" id="dbal_connection"/>
        </service>

        <service id="SwagMigrationApi\Repository\AbstractRepository" abstract="true">
            <argument type="service" id="dbal_connection" />
        </service>

        <service id="swag_migration_api.repository.category_repository" class="SwagMigrationApi\Repository\CategoryRepository" parent="SwagMigrationApi\Repository\AbstractRepository" />

        <service id="swag_migration_api.repository.product_repository" class="SwagMigrationApi\Repository\ProductRepository" parent="SwagMigrationApi\Repository\AbstractRepository" />

        <service id="swag_migration_api.repository.customer_repository" class="SwagMigrationApi\Repository\CustomerRepository" parent="SwagMigrationApi\Repository\AbstractRepository" />

        <service id="swag_migration_api.repository.order_repository" class="SwagMigrationApi\Repository\OrderRepository" parent="SwagMigrationApi\Repository\AbstractRepository" />

        <service id="swag_migration_api.repository.translation_repository" class="SwagMigrationApi\Repository\TranslationRepository" parent="SwagMigrationApi\Repository\AbstractRepository" />

        <service id="swag_migration_api.repository.asset_repository" class="SwagMigrationApi\Repository\AssetRepository" parent="SwagMigrationApi\Repository\AbstractRepository" />

    </services>

</container>