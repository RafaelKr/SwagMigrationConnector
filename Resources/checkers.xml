<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="swag_migration_api.service.requirements_validator_service" class="SwagMigrationAssistant\Service\RequirementsValidatorService">
            <argument type="collection">
                <argument type="service" id="swag_migration_api.service.checker.php_version"/>
                <argument type="service" id="swag_migration_api.service.checker.mysql_version"/>
                <argument type="service" id="swag_migration_api.service.checker.php_extensions"/>
                <argument type="service" id="swag_migration_api.service.checker.php_configuration"/>
                <argument type="service" id="swag_migration_api.service.checker.mysql_configuration"/>
                <argument type="service" id="swag_migration_api.service.checker.license_check"/>
            </argument>
        </service>

        <service id="swag_migration_api.service.checker.php_version" class="SwagMigrationAssistant\Service\Checker\PhpVersion">
            <argument type="service" id="snippets"/>
        </service>

        <service id="swag_migration_api.service.checker.mysql_version" class="SwagMigrationAssistant\Service\Checker\MysqlVersion">
            <argument type="service" id="dbal_connection"/>
            <argument type="service" id="snippets"/>
        </service>

        <service id="swag_migration_api.service.checker.php_extensions" class="SwagMigrationAssistant\Service\Checker\PhpExtensions">
            <argument type="service" id="snippets"/>
        </service>

        <service id="swag_migration_api.service.checker.php_configuration" class="SwagMigrationAssistant\Service\Checker\PhpConfiguration">
            <argument type="service" id="snippets"/>
        </service>

        <service id="swag_migration_api.service.checker.mysql_configuration" class="SwagMigrationAssistant\Service\Checker\MysqlConfiguration">
            <argument type="service" id="snippets"/>
            <argument type="service" id="dbal_connection"/>
        </service>

        <service id="swag_migration_api.service.checker.license_check" class="SwagMigrationAssistant\Service\Checker\LicenseCheck">
            <argument type="service" id="snippets"/>
            <argument>%shopware.store.apiEndpoint%</argument>
            <argument>%shopware.release.version%</argument>
            <argument type="service" id="dbal_connection"/>
        </service>
    </services>
</container>
